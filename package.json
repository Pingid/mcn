{
  "name": "mcn",
  "version": "0.0.0-dev.0",
  "description": "A small utility for conditionally joining classNames together.",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "module": "lib/esm/index.mjs",
  "author": "Dan Beaven <dm.beaven@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pingid/mcn"
  },
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": {
        "types": "./lib/esm/index.d.mts",
        "default": "./lib/esm/index.mjs"
      },
      "module": "./lib/esm/index.js",
      "default": "./lib/index.js",
      "require": "./lib/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib",
    "src",
    "README.md",
    "package.json",
    "!**/*.test.*",
    "tsconfig.json"
  ],
  "keywords": [
    "classes",
    "classname",
    "classnames"
  ],
  "scripts": {
    "build": "node build.js",
    "test": "vitest"
  },
  "devDependencies": {
    "prettier": "^2.8.8",
    "typescript": "^5.1.3",
    "vitest": "^0.32.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "all"
  }
}
